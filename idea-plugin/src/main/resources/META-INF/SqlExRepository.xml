<idea-plugin>
    <projectListeners>
        <listener class="me.danwi.sqlex.idea.repositroy.SqlExRepositoryToolbarProvider"
                  topic="me.danwi.sqlex.idea.repositroy.SqlExRepositoryEventListener"/>
    </projectListeners>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="SqlEx Repository" icon="SqlExIcons.ToolWindow" anchor="bottom"
                    factoryClass="me.danwi.sqlex.idea.repositroy.SqlExRepositoryToolWindowFactory"/>
        <editorFloatingToolbarProvider implementation="me.danwi.sqlex.idea.repositroy.SqlExRepositoryToolbarProvider"/>
    </extensions>
    <actions>
        <group id="me.danwi.sqlex.FloatingGroup">
            <action id="me.danwi.sqlex.RefreshAction"
                    class="me.danwi.sqlex.idea.repositroy.SqlExRepositoryRefreshAction"/>
        </group>
    </actions>
</idea-plugin>